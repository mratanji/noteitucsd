    <div class="container">
        <form id="addClassForm" role="form" method="get" action="/done_addclass">
            <h3>Add a class</h3>
            <div class="form-group">
              <input type="text" class="form-control" id="department" placeholder="Department (i.e CSE, MGT)" name="department">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="code" placeholder="Code (i.e. 110, 20C)" name="code">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="year" placeholder="Year" name="year">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="quarter" placeholder="Quarter (i.e FA, WI)" name="quarter">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="professor" placeholder="Professor (Last, First)" name="professor">
            </div>
            <input type="submit" id="submitBtn" class="btn btn-primary btn-lg btn-block active" value="Add Class!"></input>
        </form>
    </div>
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
